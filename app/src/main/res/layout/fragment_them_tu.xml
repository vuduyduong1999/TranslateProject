<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ThemTuFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Thêm từ mới"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/etNewWord"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="top"
                android:hint="Nhập từ mới(Tiếng anh)..."
                android:layout_marginBottom="10dp"/>
            <EditText

                android:id="@+id/edDifiN"
                android:padding="15dp"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Định nghĩa từ..."
                android:layout_marginBottom="10dp"
                />
            <TextView

                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Định nghĩa từ theo:"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/eddanhtu"
                android:hint="Danh từ...(Có thể bỏ trống)"
                android:padding="15dp"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/eddongtu"
                android:hint="Động từ...(Có thể bỏ trống)"
                android:padding="15dp"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/edttnhtu"
                android:hint="Tính từ...(Có thể bỏ trống)"
                android:padding="15dp"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/edtrangtu"
                android:hint="Trạng từ...(Có thể bỏ trống)"
                android:padding="15dp"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Một số các yêu cầu khác:"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="5dp"/>


            <EditText
                android:id="@+id/edDongNghia"
                android:padding="15dp"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Từ đồng nghĩa...\n(Viết cách nhau bởi dấu phẩy '','' )"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:id="@+id/edtraiNghia"
                android:padding="15dp"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Từ trái nghĩa...\n(Viết cách nhau bởi dấu phẩy '','' )"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:id="@+id/edExample"
                android:padding="15dp"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Câu ví dụ...\n(Viết cách nhau bởi dấu phẩy '','' )"
                android:layout_marginBottom="10dp"
                />
            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SAVE"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>